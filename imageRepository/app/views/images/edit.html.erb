<div class="container">
    <div class="row">

    <div class="col-sm-12">
        <h1>Edit Image</h1> <br>
    </div>

    <%= form_with(model: @image, local: true) do |f| %>
        <div class="col-sm-12">
            <% if @image.errors.any? %>
                <div id="error_explanation">
                    <h2>
                    <%= pluralize(@image.errors.count, "error") %> prohibited
                    this image from being saved:
                    </h2>
                    <ul>
                    <% @image.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>
        </div>

        <div class="col-sm-12">
            <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title %>
            </div>
        
            <div class="form-group">
            <%= f.label :description %><br>
            <%= f.rich_text_area :description, :placeholder=>"What is your image about?", :class=>"white_background black_text" %>
            </div>

            <div class="form-group">
            <%= f.label "Street address:" %><br>
            <%= f.text_field :street , class: "form-control"%>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                <%= f.label :city %><br>
                <%= f.text_field :city, class: "form-control" %>
                </div>
                <div class="form-group col-md-4">
                <%= f.label :province %><br>
                <%= f.text_field :province, class: "form-control" %>
                </div>
                <div class="form-group col-md-2">
                <%= f.label :country %><br>
                <%= f.text_field :country, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
            <%= f.label :privacy %><br>
            <%= f.select :privacy, ['private', 'public']%>
            </div>

            <div class="form-group">
            <%= f.label :file %><br>
            <%= f.file_field :file %>
            </div>
        
            <div class="form-group">
            <%= f.submit %>
            </div>
        </div>
    
    <% end %>
    <div class="col-sm-12">
    <%= link_to '<button type="button" class="btn btn-primary">Back</button>'.html_safe, root_path %>
    </div>
    </div>
</div>